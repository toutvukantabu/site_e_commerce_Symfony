{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block body %}
<table class="table">
	<thead>
		<tr>
			<th>Produits</th>
			<th>prix</th>
			<th>quantit√©</th>
			<th>Total</th>
			<th>supprimer</th>
		</tr>
	</thead>
	<tbody>
		{% for item in items %}
			<tr>
				<td>
					{{item.product.name}}
				</td>
				<td>
					{{item.product.price}}
				</td>

				<td>
					<a href=" {{ path('cart_decrement', {'id' : item.product.id}) }} " class="btn btn-sm  btn-danger">
						<i class="fas fa-minus"></i>
					</a>
					{{item.qty}}
					<a href=" {{ path('cart_add', {'id' : item.product.id}) }}?returnToCart=true " class="btn btn-sm btn-primary">
						<i class="fas fa-plus"></i>
					</a>
				</td>
		<td>
			{{item.total}}
		</td>
		<td>
			<a href=" {{ path('cart_delete', {'id' : item.product.id}) }} " class="btn btn-sm btn-danger">
				supprimer</a>
		</td>
        </tr>
	</tbody>
</tr>{% endfor %}</tbody><tfoot><tr>
<td colspan="3">total</td>
<td colspan="2">{{total}}</td></tr></tfoot></table>{% endblock %}
